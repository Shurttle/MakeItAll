<Window x:Class="MakeItAll.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakeIt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Text="Добро пожаловать! (придумать потом название)" />
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,60,0,0" FontSize="16" Text="У вас уже есть аккаунт?" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,120,0,0">
            <Button x:Name="btnYes" Content="Да" Margin="10" Click="btnYes_Click"/>
            <Button x:Name="btnNo" Content="Нет" Margin="10" Click="btnNo_Click"/>
        </StackPanel>
    </Grid>
</Window>